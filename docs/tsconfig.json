{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "paths": {
      "vue-business-kit": ["../packages/vue-business-kit/src"],
      "~/*": ["./.vitepress/vitepress/*"],
      "vue": ["./node_modules/vue"]
    },
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "include": ["**/*", ".vitepress/**/*"],
  "exclude": ["node_modules"]
}
